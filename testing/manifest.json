{
    "manifest_version": 3,
    "name": "WebSocket Test",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "tabs", "storage","socket.io.min.js"],
    "action": {
        "default_popup": "popup.html"

    },
    "background": {
        "service_worker": "dist/background.bundle.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js","popup.js","socket.io.min.js"]
        }
    ]
}
