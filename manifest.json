{
    "name": "MindCue Extension",
    "version": "1.0.0",
    "description": "This extension is for a system that helps filter out people's triggers online",
    "author": "Novas",
    "action": {
        "default_popup": "popup.html",
        "default_title": "MindCue Extension",
        "default_icon": {
          "16": "images/Brainstorm.png",
         "32": "images/Brainstorm.png",
          "48": "images/Brainstorm.png",
          "128": "images/Brainstorm.png"
        }
    },
    "web_accessible_resources": [{ 
      "resources": ["images/coverBackground.png"],
      "matches": ["<all_urls>"]
    }],
    "icons": {
      "16": "images/Brainstorm.png",
      "32": "images/Brainstorm.png",
      "48": "images/Brainstorm.png",
      "128": "images/Brainstorm.png"
    },
    "background": {
      "service_worker": "./background.js",
      "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js","settings.js"],
          "css":["content_script.css"],
          "run_at": "document_end"
        }
      ],
     "permissions": [
       "declarativeContent",
       "storage",
       "tabs",
       "activeTab",
       "windows",
       "scripting",
       "activeTab", "desktopCapture", "mediaCapture", "audioCapture", "videoCapture",
       "downloads",
       "fileSystem.write"
     ],
  "host_permissions":  ["<all_urls>"],
  "manifest_version": 3
  
}
